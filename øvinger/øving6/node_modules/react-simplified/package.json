{
  "name": "react-simplified",
  "version": "4.0.1",
  "description": "Easier React programming.",
  "keywords": [
    "bind",
    "es6 proxy",
    "observable",
    "react-component",
    "react",
    "reactjs",
    "state management"
  ],
  "author": "Ole Christian Eidheim <eidheim@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://gitlab.com/eidheim/react-simplified/issues"
  },
  "homepage": "https://gitlab.com/eidheim/react-simplified",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/eidheim/react-simplified.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "build": "babel src --out-dir lib --copy-files",
    "prepublishOnly": "npm run build"
  },
  "pre-push": [
    "lint",
    "test"
  ],
  "jest": {
    "testRegex": "./tests/.+Test\\.js$",
    "setupFiles": [
      "./tests/setup.js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 90,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "browserslist": [
    "defaults",
    "not <= 0.2%",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@nx-js/observer-util": "^4.2.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.13",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "babel-jest": "^29.0.1",
    "eslint": "^8.23.0",
    "eslint-plugin-react": "^7.31.1",
    "jest": "^29.0.1",
    "pre-push": "^0.1.3",
    "react-test-renderer": "^18.2.0"
  }
}
